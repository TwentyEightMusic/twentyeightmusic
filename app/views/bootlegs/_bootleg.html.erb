<tr>
  <td>
    <%= bootleg.gig.venue %>
    <br>
    <%=
      bootleg.gig.start_time.in_time_zone('Eastern Time (US & Canada)').
        strftime('%a, %b%e')
    %>
    <% if current_user.admin? %>
      <br>
      <%= link_to "add track", new_bootleg_track_path(bootleg), class: "button tiny" %>
      <br>
      <%= link_to "remove bootleg", bootleg, method: :delete, class: "button tiny" %>
    <% end %>
  </td>
  <td>
    <ul class="no-bullet">
      <%= render bootleg.tracks %>
    </ul>
  </td>
</tr>
